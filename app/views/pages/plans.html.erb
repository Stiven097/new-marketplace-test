<section class="section">
    <div class="container">
        <p class="title is-4 m-t-50 m-b-50 has-text-centered">
            Choose the best package for you and your business
        </p>
        <div class="pricing-table m-t-20 m-l-50 m-r-50">
            <% @plans.data.each do |plan| %>
                <div class="pricing-plan 
                                <%= 'is-warning' if plan.amount == 1000 %> 
                                <%= 'is-primary is-active' if plan.amount == 5000 %>
                                <%= 'is-danger' if plan.amount == 10000 %> ">
                    <div class="plan-header"><%= plan.metadata.nickname %></div>
                    <div class="plan-price">
                        <span class="plan-price-amount">
                            <span class="plan-price currency">$</span><%= plan.amount / 100 %>
                        </span>/month
                    </div>
                    <div class="plan-items">
                        <div class="plan-item">
                            Commission fee is <%= plan.metadata.commission %>%
                        </div>
                    </div>
                    <div class="plan-footer">
                        <%= form_with url: subscribe_url do |f| %>
                            <%= f.hidden_field :plan_id, value: plan.id %>
                            <%= f.submit "Choose", class: "button is-fullwidth" %>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>